<library>
<!--	Each library should have at least one configuration with 'name', 'active', 'comment' attributes: -->
	<configuration active="yes" comment="" name="default">

<!--	This is an example of single device entry. Note that it also should have 'name', 'active', 'comment' attributes: -->

		<single_device active="yes" comment="" name="test_79">
			<device>p23/motor/eh.79</device>
			<type>stepping_motor</type>
			<module>oms58</module>
			<control>tango</control>
			<hostname>hasep23oh:10000</hostname>
		</single_device>

<!--	You can organise device by group. Note that it also should have 'name', 'active', 'comment' attributes: -->

		<group active="yes" comment="for test" name="Test group">
			<single_device active="yes" comment="" name="test_79">
				<device>p23/motor/eh.79</device>
				<type>stepping_motor</type>
				<module>oms58</module>
				<control>tango</control>
				<hostname>hasep23oh:10000</hostname>
			</single_device>
			<single_device active="no" comment="" name="test_80">
				<device>p23/motor/eh.80</device>
				<type>stepping_motor</type>
				<module>oms58</module>
				<control>tango</control>
				<hostname>hasep23oh:10000</hostname>
			</single_device>
		</group>

<!--	Group can also contain groups: -->

		<group active="yes" comment="for test" name="Level 1">
			<group active="yes" comment="for test" name="Level 2.1">
				<single_device active="yes" comment="" name="test_79">
					<device>p23/motor/eh.79</device>
					<type>stepping_motor</type>
					<module>oms58</module>
					<control>tango</control>
					<hostname>hasep23oh:10000</hostname>
				</single_device>
			</group>
			<group active="no" comment="for test" name="Level 2.2">
				<single_device active="yes" comment="" name="test_80">
					<device>p23/motor/eh.80</device>
					<type>stepping_motor</type>
					<module>oms58</module>
					<control>tango</control>
					<hostname>hasep23oh:10000</hostname>
				</single_device>
			</group>
		</group>

<!--	In case you have a series of similar device you can make serial_device: -->

		<serial_device active="yes" comment="" name="Test serial">
			<type>stepping_motor</type>
			<module>oms58</module>
			<control>tango</control>
			<hostname>hasep23oh:10000</hostname>
			<single_device active="yes" comment="" name="test_79">
				<device>p23/motor/eh.79</device>
			</single_device>
			<single_device active="no" comment="" name="test_80">
				<device>p23/motor/eh.80</device>
			</single_device>
		</serial_device>
	</configuration>

<!--	Library can have several configuration, but only one can be active -->
	<configuration active="no" comment="" name="only for test">

		<single_device active="yes" comment="" name="test_79">
			<device>p23/motor/eh.79</device>
			<type>stepping_motor</type>
			<module>oms58</module>
			<control>tango</control>
			<hostname>hasep23oh:10000</hostname>
		</single_device>
	</configuration>>

</library>